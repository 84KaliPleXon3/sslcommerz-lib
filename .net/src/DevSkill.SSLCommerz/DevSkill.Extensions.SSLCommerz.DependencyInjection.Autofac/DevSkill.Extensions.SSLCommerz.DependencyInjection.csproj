<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;netstandard2.1;net452;net462;</TargetFrameworks>
		<LangVersion Condition="'$(TargetFramework)'=='net452' Or '$(TargetFramework)'=='net462' Or '$(TargetFramework)'=='netstandard2.0'">
			7.3
		</LangVersion>
		<LangVersion Condition="'$(TargetFramework)'=='netstandard2.1'">
			8.0
		</LangVersion>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Authors>Rafsanul Hasan</Authors>
		<Company>Devskill</Company>
		<Product>Devskill.SSLCommerz.Core</Product>
		<PackageId>Devskill.SSLCommerz.Core</PackageId>
		<PackageVersion>$(Version)</PackageVersion>
		<AssemblyVersion>1.0.0.14</AssemblyVersion>
		<FileVersion>1.0.0.14</FileVersion>
		<Version>1.0.0.1-beta2</Version>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Autofac" Version="4.9.4" />					    
		<PackageReference Include="Microsoft.Extensions.Http" Version="3.1.0" />	  
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="3.1.0" />
	</ItemGroup>
	<ItemGroup Condition="'$(TargetFramework)'=='netstandard2.0'">			 
		<PackageReference Include="Autofac.Extensions.DependencyInjection" Version="5.0.1" />
		<PackageReference Include="Microsoft.AspNetCore.Http" Version="2.2.2" />
		<PackageReference Include="System.Net.Http" Version="4.3.4" />
	</ItemGroup>
	<ItemGroup Condition="'$(TargetFramework)'=='netstandard2.1'">
	</ItemGroup>
	<ItemGroup Condition="'$(TargetFramework)'=='net452' Or '$(TargetFramework)'=='net462'">
		<PackageReference Include="System.Net.Http" Version="4.3.4" />
	</ItemGroup> 
	<ItemGroup>
		<ProjectReference Include="..\DevSkill.SSLCommerz.Core\DevSkill.SSLCommerz.Core.csproj" />
	</ItemGroup>
	<ItemGroup>
		<Compile Remove="*;*\*" />
	</ItemGroup>
	<ItemGroup Condition="'$(TargetFramework)'=='netstandard2.0'">
		<Compile Include="Autofac\*.net20.cs" />
	</ItemGroup>
	<ProjectExtensions>
		<VisualStudio>
			<UserProperties BuildVersion_BuildVersioningStyle="" BuildVersion_UpdateFileVersion="True" BuildVersion_StartDate="2019/12/25" BuildVersion_UseUniversalClock="True" BuildVersion_UpdateAssemblyVersion="True" />
		</VisualStudio>
	</ProjectExtensions>
</Project>